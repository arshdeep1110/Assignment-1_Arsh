<%- include ../partials/header.ejs%>


    <%- include ../partials/main_nav.ejs%>

        <h1 id="heading2">Welcome to the
            <%= title %> page</h1>
        <table class="table table-striped table-bordered table-hover bg-light">
            <thead>
                <tr>
                    <th class="text-center">Contact Name</th>
                    <th class="text-center">Contact Number</th>
                    <th class="text-center">Contact Email</th>
                </tr>
            </thead>
            <tbody>
                <% for (let count = 0; count < contacts.length; count++) { %>
                    <tr>
                        <td class="text-center">
                            <%= contacts[count].name %>
                        </td>
                        <td class="text-center">
                            <%= contacts[count].number %>
                        </td>
                        <td class="text-center">
                            <%= contacts[count].email %>
                        </td>
                        <td class="text-center"><a href="/auth/<%= contacts[count]._id %>" class="btn btn-success text-white">Edit Contact</a></td>
                        <td class="text-center"><a href="/auth/delete/<%= contacts[count]._id %>" class="btn btn-danger text-white">Delete Contact</a></td>
                    </tr>
                    <% } %>
            </tbody>

        </table>

        <%- include ../partials/bottom_nav.ejs%>

            <%- include ../partials/footer.ejs%>